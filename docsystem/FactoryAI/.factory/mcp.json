{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-playwright"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "true"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-filesystem", "/root/photonos-scripts/docsystem/FactoryAI"]
    },
    "git": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-git", "--repository", "/root/photonos-scripts/docsystem/FactoryAI"]
    }
  },
  "tools": [
    "http_get",
    "http_head", 
    "write_file",
    "list_files",
    "view_image",
    "grammar_check",
    "delegate_to_droid",
    "git_branch",
    "git_commit",
    "github_create_pr",
    "github_list_prs"
  ]
}
